{
  "$schema": "https://json.schemastore.org/package.json",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "vite build",
    "build:analyze": "vite build --mode analyze",
    "build:report": "vite build && echo 'ðŸ“Š Bundle Analysis:' && ls -lah public/build/assets/ | grep -E '\\.(js|css)$' && echo '' && echo 'ðŸŽ¯ Optimization Summary:' && echo 'Total JS chunks: '$(ls public/build/assets/*.js | wc -l) && echo 'Total CSS files: '$(ls public/build/assets/*.css | wc -l)",
    "dev": "vite",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "type-check": "tsc --noEmit",
    "lint": "eslint resources/js --ext .js,.ts",
    "lint:fix": "eslint resources/js --ext .js,.ts --fix",
    "format": "prettier --write resources/js/**/*.{js,ts}",
    "pre-commit": "npm run lint && npm run type-check && npm run test",
    "prepare": "husky",
    "validate": "npm run lint && npm run type-check && npm run test && npm run build",
    "security:audit": "npm audit --audit-level moderate",
    "security:check": "npx audit-ci --moderate",
    "bundle:analyze": "npm run build:report && echo 'Bundle analysis complete'",
    "ci": "npm run validate && npm run security:audit"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/user-event": "^14.6.1",
    "@types/alpinejs": "3.13.11",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "audit-ci": "^7.1.0",
    "autoprefixer": "^10.4.21",
    "axios": "^1.11.0",
    "babel-jest": "^30.0.5",
    "concurrently": "^9.0.1",
    "eslint": "^9.33.0",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "jsdom": "^26.1.0",
    "laravel-vite-plugin": "^1.3.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.17",
    "terser": "^5.43.1",
    "ts-jest": "^29.4.1",
    "typescript": "5.9.2",
    "vite": "^5.4.19"
  },
  "dependencies": {
    "alpinejs": "3.14.1"
  }
}
